<div class="m-20">
  <h1 class="mb-11 text-3xl font-medium">Foods</h1>
  <% flash.each do |type, msg| %>
  <div class="text-green-500">
    <%= msg %>
  </div>
<% end %>
  <div id="foodsList" class="flex flex-col ">
  <div class="w-full flex justify-end">
    <button class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded">
      <%= link_to "add new food",  new_user_recipe_food_path(params[:user_id],params[:recipe_id])%>
    </button>
  </div>
  <table class=" text-center mb-20 border-2 text-left w-[80vw] border-slate-700 text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 p-4">
      <tr class= "text-center">
        <th class="text-xs text-white uppercase bg-gray-700 p-4">Food</th>
        <th class="text-xs text-white uppercase bg-gray-700 p-4">Measurement unit</th>
        <th class="text-xs text-white uppercase bg-gray-700 p-4"> Unit Price</th>
        <th class="text-xs text-white uppercase bg-gray-700 p-4">Action</th>
      </tr>
      <% @foods.each do |food| %>
        <%= render food %>
         <% if user_signed_in? %>
                  <th>
                    <%= link_to "Delete",user_recipe_food_path(params[:user_id], params[:recipe_id], food.id),data: {turbo_method: :delete}, class:"p-4 font-medium hover:text-red-500"  %>
                  </th>
        </tr>
            <% end %>
      <% end %>

      </table>
  </div>
</div>
