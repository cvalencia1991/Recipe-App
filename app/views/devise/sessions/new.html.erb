<div class="w-[40%] text-[18px] my-20 mx-auto flex flex-col items-center">
  <h2 class="mb-10 text-3xl font-medium">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field mb-4">
    <%= f.label :email, class: "text-lg" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-4 py-3 border-solid" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: "text-lg" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"w-full px-4 py-3 border-solid" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <div class="actions mt-6 mb-10 mx-auto w-[50%] border-slate-700 rounded-md border-2 p-2 bg-gray-50 text-slate-700 hover:bg-slate-700 hover:text-white text-center">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
