<div id="<%= dom_id recipe %>", class="mb-11 p-4 mb-11 border-solid border-2 border-slate-400">

<div class="flex">
  <div class="flex flex-col w-1/4">
    <p class="mr-20">
      <%= link_to recipe.name, recipe, class:"text-xl font-bold underline hover:text-[#11537d]" %>
    </p>

    <p class="mt-auto">
      <strong class="text-xl">By: <%= recipe.user.name %></strong>
    </p>

  </div>

  <p class="w-3/4">
    <strong>Preparation:</strong>
    <%= recipe.description%>
  </p>

</div>

</div>
