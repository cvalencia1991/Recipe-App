<div class="m-20 flex flex-col items-center justify-center">
  <h1 class="mb-11 text-3xl">Public Recipes</h1>

  <div id="recipes">
<% @foods.each do |food| %>
    <% food.user.sortrecipes.each_with_index do |recipe| %>
        <% if recipe.public%>
        <div class="flex items-center justify-between gap-8 mt-5 border-solid rounded-md border-2 borde px-16 py-5 bg-gray-50 hover:bg-slate-400 text-center">
                <div class="bg-white border-b-2 text-slate-700 border-slate-700">
                    <h4 class="p-4 text-2xl font-medium"><%= recipe.name %></h1>
                    <h3 class="p-4 text-xl">By: <%= food.user.name%></h3>
                </div>
                <div class="flex flex-col">
                    <h2 class="my-1 border-solid w-72 rounded-md p-2 bg-black text-white text-xl text-center">total food items: <%= @foods.length%></h2>
                    <h3 class="my-1 border-solid w-72 rounded-md p-2 bg-black text-white text-xl text-center">total price:
                    <%=  food.quantity %></h3>
                </div>
        </div>
        <%end%>
    <%end%>

<%end%>
  </div>
</div>
